<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.60"
        app:layout_constraintWidth_percent="0.60"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/title"
                style="@style/card"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:hint="TITLE"
                android:singleLine="true"
                android:textAlignment="center"
                android:inputType="textCapSentences"
                android:textSize="28dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.17"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></EditText>

            <LinearLayout
                android:id="@+id/layout_taboo_words"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.77"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:weightSum="5"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/border">

                <EditText
                    android:id="@+id/taboo_word_1"
                    style="@style/card"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="TABOO1"
                    android:inputType="textCapSentences"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textSize="24dp"></EditText>

                <EditText
                    android:id="@+id/taboo_word_2"
                    style="@style/card"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="TABOO2"
                    android:inputType="textCapSentences"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textSize="24dp"></EditText>

                <EditText
                    android:id="@+id/taboo_word_3"
                    style="@style/card"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="TABOO3"
                    android:inputType="textCapSentences"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textSize="24dp"></EditText>

                <EditText
                    android:id="@+id/taboo_word_4"
                    style="@style/card"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="TABOO4"
                    android:inputType="textCapSentences"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textSize="24dp"></EditText>

                <EditText
                    android:id="@+id/taboo_word_5"
                    style="@style/card"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="TABOO5"
                    android:inputType="textCapSentences"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textSize="24dp"></EditText>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>